<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/halaman_prediksi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorOnPrimary"
    android:fillViewport="true"
    tools:context=".ui.prediction.PredictionFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorOnPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.MaterialToolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="@string/title_prediction"
                app:titleTextAppearance="@style/header" />

        </com.google.android.material.appbar.AppBarLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/question1"
            style="@style/body2_m"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="Masukkan Gejala yang Anda Rasakan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/topAppBar" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/dd_layout_question1"
            style="@style/OutlinedRoundedPredictionBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            app:boxStrokeColor="@color/primary_600"
            app:hintEnabled="false"
            app:layout_constraintTop_toBottomOf="@id/question1">

            <AutoCompleteTextView
                android:id="@+id/dd_question1"
                style="@style/body1_m"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_symptom" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/dd_layout_question2"
            style="@style/OutlinedRoundedPredictionBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:boxStrokeColor="@color/primary_600"
            app:hintEnabled="false"
            app:layout_constraintTop_toBottomOf="@id/dd_layout_question1">

            <AutoCompleteTextView
                android:id="@+id/dd_question2"
                style="@style/body1_m"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_symptom" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/dd_layout_question3"
            style="@style/OutlinedRoundedPredictionBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:boxStrokeColor="@color/primary_600"
            app:hintEnabled="false"
            app:layout_constraintTop_toBottomOf="@id/dd_layout_question2">

            <AutoCompleteTextView
                android:id="@+id/dd_question3"
                style="@style/body1_m"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_symptom" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/dd_layout_question4"
            style="@style/OutlinedRoundedPredictionBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:visibility="gone"
            app:boxStrokeColor="@color/primary_600"
            app:hintEnabled="false"
            app:layout_constraintTop_toBottomOf="@id/dd_layout_question3">

            <AutoCompleteTextView
                android:id="@+id/dd_question4"
                style="@style/body1_m"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_symptom" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/dd_layout_question5"
            style="@style/OutlinedRoundedPredictionBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:visibility="gone"
            app:boxStrokeColor="@color/primary_600"
            app:hintEnabled="false"
            app:layout_constraintTop_toBottomOf="@id/dd_layout_question4">

            <AutoCompleteTextView
                android:id="@+id/dd_question5"
                style="@style/body1_m"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_symptom" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/dd_layout_question6"
            style="@style/OutlinedRoundedPredictionBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:visibility="gone"
            app:boxStrokeColor="@color/primary_600"
            app:hintEnabled="false"
            app:layout_constraintTop_toBottomOf="@id/dd_layout_question5">

            <AutoCompleteTextView
                android:id="@+id/dd_question6"
                style="@style/body1_m"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_symptom" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/dd_layout_question7"
            style="@style/OutlinedRoundedPredictionBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:visibility="gone"
            app:boxStrokeColor="@color/primary_600"
            app:hintEnabled="false"
            app:layout_constraintTop_toBottomOf="@id/dd_layout_question6">

            <AutoCompleteTextView
                android:id="@+id/dd_question7"
                style="@style/body1_m"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_symptom" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/prediction_button"
            style="@style/Widget.App.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:paddingHorizontal="32dp"
            android:paddingVertical="10dp"
            android:text="@string/prediction_button"
            app:cornerRadius="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dd_layout_question7" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floating_action_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/primary_600"
            android:contentDescription="@string/fab_content_desc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white"
            app:srcCompat="@drawable/baseline_add_24"/>

        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>