<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MediCare" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="header">
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="subtitle2_sb">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
    </style>

    <style name="body2_sb">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
    </style>

    <style name="body2_m">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="body2_r">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="body1_m">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="overline_r">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="caption_m">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="body1_sb">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
    </style>

    <style name="card_user_name" parent="Widget.Material3.CardView.Elevated">
        <item name="fontStyle">@style/body2_sb</item>
        <item name="cardBackgroundColor">@drawable/gradient1</item>
    </style>

</resources>